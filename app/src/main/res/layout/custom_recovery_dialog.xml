<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:layout_gravity="center"
    android:padding="20dp">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="恢复钱包"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:paddingBottom="24dp" />

    <TextView
        android:id="@+id/dialog_description"
        android:layout_width="wrap_content"
        android:layout_marginHorizontal="6dp"
        android:layout_height="wrap_content"
        android:text="找回钱包地址需要您的私钥"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:textIsSelectable="true"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="24dp" />

    <EditText
        android:id="@+id/private_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:background="@drawable/edit_text_background"
        android:hint="请输入私钥"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="end">

        <FrameLayout
            android:id="@+id/dialog_button_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:background="@drawable/btn_background"
            android:minHeight="48dp"
            android:padding="12dp">

            <ImageView
                android:id="@+id/button_cancel_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/btn_background"
                android:contentDescription="Button Background" />

            <TextView
                android:id="@+id/button_cancel_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="取消"
                android:textSize="16sp"
                android:textColor="#FFFFFF" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/dialog_button_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_background"
            android:minHeight="48dp"
            android:padding="12dp">

            <ImageView
                android:id="@+id/button_confirm_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/btn_background"
                android:contentDescription="Button Background" />

            <TextView
                android:id="@+id/button_confirm_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="确认"
                android:textSize="16sp"
                android:textColor="#FFFFFF" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>
