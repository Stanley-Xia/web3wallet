<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:background="@drawable/gradient_background_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center"
        android:background="@drawable/card_background"
        android:elevation="10dp"
        android:layout_margin="16dp">

        <!-- Name -->
        <TextView
            android:id="@+id/tokenNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Token Name"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#00adb5"
            android:layout_gravity="center"
            android:shadowColor="#000000"
            android:shadowRadius="2"/>

        <!-- Symbol -->
        <TextView
            android:id="@+id/tokenSymbolTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Symbol"
            android:textSize="22sp"
            android:textColor="#a36ac9"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"/>

        <!-- 币价 -->
        <TextView
            android:id="@+id/tokenPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Price"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#00ff95"
            android:layout_marginTop="12dp"
            android:layout_gravity="center"/>

        <!-- 交易量 -->
        <TextView
            android:id="@+id/tokenVolumeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trading Volume"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>

        <!-- 市值 -->
        <TextView
            android:id="@+id/tokenMarketCapTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Market Cap"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>

        <!-- 代币信息 -->
        <TextView
            android:id="@+id/tokenDescriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            android:gravity="center"/>
    </LinearLayout>
</ScrollView>
