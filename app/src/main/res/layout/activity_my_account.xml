<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <!-- 用户名, 登录, 注册 -->
    <LinearLayout
        android:id="@+id/top_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/blue_border_background"
        android:backgroundTint="#87CEEB"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_account_name"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:text="您当前未登录账号"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFA500"
            android:padding="12dp"
            android:gravity="center"
            android:background="@drawable/blue_border_background"
            android:layout_marginBottom="-3dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:padding="3dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="登录"
                android:textSize="16sp"
                android:gravity="center"
                android:padding="12dp"
                android:layout_marginEnd="3dp"
                android:background="@drawable/blue_border_background"/>

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="注册"
                android:textSize="16sp"
                android:gravity="center"
                android:padding="12dp"
                android:background="@drawable/blue_border_background"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 提示 -->
    <LinearLayout
        android:id="@+id/center_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_background"
        android:gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/top_section"
        app:layout_constraintBottom_toTopOf="@id/bottom_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="导出私钥需注意风险，请妥善保管私钥。\nBe aware of the risks when exporting private keys. Please keep your private keys safe."
            android:textSize="16sp"
            android:textColor="#FFA500"
            android:gravity="center"
            android:padding="12dp"/>
    </LinearLayout>

    <!-- 按钮 (退出登录, 导入私钥, 导出私钥, 更多, 返回) -->
    <LinearLayout
        android:id="@+id/bottom_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center">

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="退出登录"
            android:backgroundTint="#85BB65"
            android:layout_marginBottom="8dp"
            android:padding="12dp"/>

        <Button
            android:id="@+id/btnImportKeys"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="导入私钥"
            android:backgroundTint="#85BB65"
            android:layout_marginBottom="8dp"
            android:padding="12dp"/>

        <Button
            android:id="@+id/btnExportKeys"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="导出私钥"
            android:backgroundTint="#85BB65"
            android:layout_marginBottom="8dp"
            android:padding="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnMoreFeatures"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="更多"
                android:padding="12dp"
                android:layout_marginEnd="12dp"/>

            <Button
                android:id="@+id/btnBack"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="返回"
                android:padding="12dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
